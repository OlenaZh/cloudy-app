
<div class="global-container background-image">
  <div class="card sign-up-form mx-auto">
    <div class="card-body">

      <h2 class="card-title text-center">Log in to CLOUDY</h2>
        
      <div class="card-text px-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group mb-3">

          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "email" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ms-2" %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary btn-block form-control form-control-lg" %>
        </div>
        <% end %>


        <div class="action log-in">
          Don`t have an account?`
        <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
